# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aaventure

# JWT Secret (Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Session Secret (Change in production!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-make-it-long-and-random

# Stripe Configuration (Get from https://stripe.com)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Base URL
BASE_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000
# Optional comma-separated extra frontend origins (for previews/custom domains)
ALLOWED_ORIGINS=

# Email Configuration (Optional - for notifications)
# Set EMAIL_ENABLED=false to disable outbound email attempts.
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
# WordPress Integration (Optional)
# Preferred: WORDPRESS_API_URL (legacy WORDPRESS_URL is still supported)
WORDPRESS_API_URL=https://public-api.wordpress.com/wp/v2/sites/your-site.wordpress.com/posts
WORDPRESS_URL=https://public-api.wordpress.com/wp/v2/sites/your-site.wordpress.com/posts

# Demo Checkout Mode
# Set to true only if you want /api/subscription/demo-success enabled with real Stripe keys.
ALLOW_DEMO_SUBSCRIPTIONS=false
